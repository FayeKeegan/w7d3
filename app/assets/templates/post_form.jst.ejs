
<label for="post-title">Title</label>
<input type="text"
       name="post[title]"
       id="post-title"
       value="<%= post.escape("title") %>"><br>

<label for="post-body">Body</label>
<input type="textarea"
       name="post[body]"
       id="post-body"
       value="<%= post.escape("body") %>">

<button type="submit" class="submit-post">Submit</button>
