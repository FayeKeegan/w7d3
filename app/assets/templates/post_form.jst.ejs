<h2> New Post </h2>

<div class="form-group">
  <label for="post-title">Title</label>
  <input type="text"
         class="form-control"
         name="post[title]"
         id="post-title"
         value="<%= post.escape("title") %>"><br>
</div>

<div class="form-group">
  <label for="post-body">Body</label>
  <input type="textarea"
         class="form-control"
         name="post[body]"
         id="post-body"
         value="<%= post.escape("body") %>">
</div>

<button type="submit" class="btn btn-default create-post">Create Post!</button>
